<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/Stuff/Style.css">
    {{template "HeadTitle" .PageName}}
</head>

<body>
    {{template "BodyTitle" .}}
    <br>
    <h3 class="Application">Please enter user name and password to verify!</h3>
    <form method="post">
        <div class="Application">
            <div>
                <input type="text" name="username" placeholder="Email">
                <input type="password" name="oldpassword" placeholder="Old Password">
            </div>
        </div>
        <h3 class="Application" style="margin-top: 20pt;">Please enter new password and confirm password!</h3>
        <div class="Application">
            <div>
                <input type="password" name="newpassword" placeholder="New Password">
                <input type="password" name="confirmpassword" placeholder="Confirm New Password">
            </div>
            <input class="Application" type="submit">
        </div>
    </form>
    <h4 class="Application" id="MsgToUser"></h4>
    {{template "Footer"}}
</body>

</html>